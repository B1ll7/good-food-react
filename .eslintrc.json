{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [
            0,
            "always"
        ],
        "indent": [
            "error",
            2
        ],
        "space-before-function-parent": 0,
        "max-len": [
            "error",
            80,
            2,
            {
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": false,
                "ignoreTemplateLiterals": false
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}